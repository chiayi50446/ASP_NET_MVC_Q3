@model ASP_NET_MVC_Q3.ViewModels.SimpleProductViewModel
@{
    ViewBag.Title = "editProduct";
    IEnumerable<SelectListItem> defaultLocaleItem = ViewBag.DefaultLocale;
}

@section colorbox_title{
    Edit Product
}
<div class="l_margin r_margin">
    <div class="tab_box">
        <div class="tab_container">
            <div id="tab1">
                <div class="layout07">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        <ul class="table10 box03">
                            <li>
                                <span style="width: 165px;">ProductName :</span>
                                <span>
                                    @Html.TextBoxFor(model => model.Name)
                                </span>
                            </li>
                            <li>
                                <span>Locale :</span>
                                <span>
                                    <span class="selectlabel">
                                        @Html.DropDownListFor(model => model.Locale, defaultLocaleItem)
                                    </span>
                                </span>
                            </li>
                        </ul>
                        <div class="line01"></div>
                        <div class="button_area align_c">
                            <button type="button" class="button04" onclick="window.top.$.colorbox.close();">Cancel</button>
                            <button type="submit" class="button02">Save</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
